div(class="dropdown project-dropdown")
    a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false") Project
        span.caret
    ul(class="dropdown-menu")
        li
            a(href="/projects")
                i(class="fa fa-external-link-square")
                |Go to @Resources.lblProjects
        li(role="separator" class="divider")
        li
            a(href="/project/new")
                i(class="fa fa-plus-square")
                |@Resources.lblPostAProject
        li(role="separator" class="divider")
        li
            a(href="@Url.Action('UserProjects', 'ClassifiedProject', new { id = User.Identity.GetUserId() })")
                i(class="fa fa-suitcase")
                |@Resources.lblMy @Resources.lblProjects        
