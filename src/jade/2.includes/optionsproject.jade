        //{
        li(role="separator" class="divider")
        li
            a(href="@Url.Action('FollowingList', 'ClassifiedProject')")
                i(class="fa fa-star")
                |@Resources.lblWatching @Resources.lblProjects
        //}
div(class="dropdown user-dropdown")
    a(href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false")
        i(class="fa fa-user")
        |Denny
        span.caret
    ul(class="dropdown-menu")
        li
            a(href="@Url.Action('RegisterEdit', 'Account')")
                i(class="fa fa-pencil")
                |@Resources.lblProfile
        li(role="separator" class="divider")
        li
            a(href="@Url.Action('Index', 'ClassifiedAsk')")
                i(class="fa fa-comments")
                |@Resources.lblClassifiedMessages
                span(class="badge @hiddenClass ") @ViewData["countMessages"]
        li(role="separator" class="divider")
        li
            a(href="@Url.Action('LogOff', 'Account')")
                i(class="fa fa-sign-out")
                |@Resources.lblLogout