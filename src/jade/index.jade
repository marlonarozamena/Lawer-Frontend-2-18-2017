extend ./1.base/base.jade

append stylesheet         
    link(href="/src/css/1.base/navwithoutsearch.css", rel="stylesheet")
    link(href="/src/css/2.home/style.css", rel="stylesheet")
block content
    block nav
        include ./2.includes/navwithoutsearch
    append sections
        div(class="carousel slide" id="search-section" data-ride="carousel")
            div(class="elements-background")
                div(class="search-grap")
                    h1(class='title search-title') Find lawyers near you
                    div(class='home-form-grap')
                        include ./2.includes/searchform
            div(class="carousel-inner" role="listbox")
                div(class="item active")
                    <img src="/Content/template/images/home/homeslider/slide1.jpg" alt="Search Lawyers">    
        div(id="how-things-work-section")
            div(class="container")
                h2(class="title") How Things Work Around Here
                div(class="row")
                    div(class="col-xs-12 col-sm-4 col-md-4")
                        div(class="thumbnail")
                            i(class="fa fa-6x fa-search step-icon" aria-hidden="true")
                            hr(class="line hidden-xs")
                            div(class="caption")
                                h3(class="caption-title") Find a Lawyer
                                p It all starts with entering details about the Case and location
                    div(class="col-xs-12 col-sm-4 col-md-4")                            
                        div(class="thumbnail")
                            i(class="fa fa-6x fa-desktop step-icon" aria-hidden="true")
                            hr(class="line line-two hidden-xs")
                            div(class="caption")                                
                                h3(class="caption-title") Match your search
                                p Browse through the listing recommendations for specific classifications
                    div(class="col-xs-12 col-sm-4 col-md-4")
                        div(class="thumbnail")
                            i(class="fa fa-6x fa-check-circle-o step-icon" aria-hidden="true")                            
                            div(class="caption")                           
                                h3(class="caption-title") Get it done
                                p Choose a Lawyer that will meet your need
        div(id="home-popular-categories-section")
            div(class="container-fluid")
                div(class="row")
                    div(class="col-xs-12 col-sm-3 col-md-3 popular-category-item")
                        div(class="popular-categories-transparent-layer")
                            div(class="vertical-center-text")
                                a(class="popular-category-link") Car Accident
                                span() View 352 lawyers
                        img(src="/Content/template/images/home/popularcategories/car_accident.jpg" alt="Car Accident")
                    div(class="col-xs-12 col-sm-3 col-md-3 popular-category-item")
                        div(class="popular-categories-transparent-layer")
                            div(class="vertical-center-text")
                                a(class="popular-category-link") Medical Malpractice
                                span() View 352 lawyers
                        img(src="/Content/template/images/home/popularcategories/medical_malpractice.jpg" alt="Medical Malpractice")
                    div(class="col-xs-12 col-sm-3 col-md-3 popular-category-item")
                        div(class="popular-categories-transparent-layer")
                            div(class="vertical-center-text")
                                a(class="popular-category-link") Slip and Fall Accident
                                span() View 352 lawyers
                        img(src="/Content/template/images/home/popularcategories/slip_and_fall.jpg" alt="Slip and Fall Accident")
                    div(class="col-xs-12 col-sm-3 col-md-3 popular-category-item")
                        div(class="popular-categories-transparent-layer")
                            div(class="vertical-center-text")
                                a(class="popular-category-link") Spinal Cord Injury
                                span() View 352 lawyers
                        img(src="/Content/template/images/home/popularcategories/spina_cord.jpg" alt="Spinal Cord Injury")
        div(id="top-categories-section")
            div(class="container")
                h2(class="title") Injury Topics
                div(class="row")
                    div(class="col-xs-12 col-sm-4 col-md-4 list-items-container")
                        ul
                            li(class="category-item")
                                a(href="") Car accident
                            li(class="category-item")
                                a(href="") Wrongful death
                            li(class="category-item")
                                a(href="") Trucking accident
                            li(class="category-item")
                                a(href="") Spinal cord injury
                            li(class="category-item")
                                a(href="") Slip and fall accident                            
                    div(class="col-xs-12 col-sm-4 col-md-4 list-items-container")
                        ul
                            li(class="category-item")
                                a(href="") Nursing home abuse and neglect
                            li(class="category-item")
                                a(href="") Motorcycle accident
                            li(class="category-item")
                                a(href="") Mesothelioma and asbestos
                            li(class="category-item")
                                a(href="") Medical malpractice
                            li(class="category-item")
                                a(href="") Libel and slander
                           
                    div(class="col-xs-12 col-sm-4 col-md-4 list-items-container")
                        ul
                            li(class="category-item")
                                a(href="") Defective and dangerous products
                            li(class="category-item")
                                a(href="") Brain injury
                            li(class="category-item")
                                a(href="") Birth injury
                            li(class="category-item")
                                a(href="") Animal and dog bites
                            
                div(class="row")
                    div(class="col-xs-12 top-categories-button-container")
                        button(class="btn btn-primary btn-lg" id="top-categories-button" type="button") Injury Lawyers
        div(id="are-you-a-pro-section")
            div(class="are-you-a-pro-transparent-layer")
                div(class="vertical-center-text")
                    h2(class="title bold") Are you an Injury Lawyer?
                    button(class="btn btn-primary-transparent btn-lg" id="join-button" type="button") Join Us
        div(id="home-create-project-section")
            div(class="container")
                h2(class="title") Need ask a question?
                h3(class="subtitle") Let multiple lawyers advice you
                button(class="btn btn-primary-inverse  btn-lg" id="home-create-project-btn" type="button") Ask a Question       
    append footer
        include ./2.includes/footer
    append scripts
        script(src="/src/js/nav.js")